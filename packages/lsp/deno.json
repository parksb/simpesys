{
  "name": "@simpesys/lsp",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "exports": "./src/main.ts",
  "publish": {
    "exclude": [
      "tests/"
    ]
  },
  "imports": {
    "vscode-languageserver": "npm:vscode-languageserver@^9.0.1",
    "vscode-languageserver/node": "npm:vscode-languageserver@^9.0.1/lib/node/main.js",
    "vscode-languageserver-textdocument": "npm:vscode-languageserver-textdocument@^1.0.12",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "test": {
    "include": ["tests/**/*.spec.ts"]
  },
  "tasks": {
    "start": "deno run --allow-env --allow-read --allow-write src/main.ts --stdio",
    "test": "deno test --allow-env --allow-read --allow-write --allow-run"
  }
}
